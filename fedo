<!DOCTYPE html>
<html>
<head>
    <title>FedEx Live Checker v3.9</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .fade-in { animation: fadeIn 0.3s ease-in; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body class="bg-gray-900 text-white min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
        <!-- STATUS CARDS -->
        <div id="status-cards" hx-get="/api/status" hx-trigger="every 2s" hx-target="#status-cards" hx-swap="innerHTML" class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="p-8 rounded-2xl bg-gray-800 border-4 border-gray-700 text-center">
                <div class="text-4xl font-black text-emerald-400 mb-2">0</div>
                <div class="text-emerald-300 uppercase tracking-wider text-sm font-bold">SUCCESS</div>
            </div>
            <div class="p-8 rounded-2xl bg-gray-800 border-4 border-gray-700 text-center">
                <div class="text-4xl font-black text-red-400 mb-2">0</div>
                <div class="text-red-300 uppercase tracking-wider text-sm font-bold">INVALID</div>
            </div>
            <div class="p-8 rounded-2xl bg-gray-800 border-4 border-blue-700 text-center">
                <div class="text-4xl font-black text-blue-400 mb-2">0/0</div>
                <div class="text-blue-300 uppercase tracking-wider text-sm font-bold">PROGRESS</div>
            </div>
            <div class="p-8 rounded-2xl bg-gray-800 border-4 border-purple-700 text-center">
                <div class="text-3xl font-black text-purple-400 mb-1">0%</div>
                <div class="text-purple-300 uppercase tracking-wider text-xs font-bold">RATE</div>
            </div>
        </div>

        <!-- CONTROLS -->
        <div id="control-status" class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 p-8 bg-gray-800/50 rounded-3xl border-2 border-gray-700">
            <div class="text-2xl font-bold text-gray-300">READY</div>
            <div class="flex gap-4">
                <button hx-post="/api/check" hx-vals='js:{filename:"creds.txt",num_browsers:10}' hx-target="#control-status" hx-swap="innerHTML"
                        class="px-8 py-4 bg-emerald-500 hover:bg-emerald-600 text-xl font-black rounded-2xl shadow-xl">üöÄ START 10 WORKERS</button>
                <button id="stop-btn" hx-get="/api/stop" hx-target="#control-status" hx-swap="innerHTML"
                        class="px-8 py-4 bg-red-500 hover:bg-red-600 text-xl font-black rounded-2xl shadow-xl hidden">üõë STOP</button>
            </div>
        </div>

        <!-- TABS -->
        <div class="flex bg-gray-800/50 rounded-2xl p-2 mb-8 border border-gray-600/50 overflow-x-auto">
            <button hx-get="/api/success" hx-target="#results" hx-swap="innerHTML"
                    class="tab-btn py-4 px-6 font-bold text-lg border-b-4 border-emerald-400 bg-emerald-500/20 text-emerald-200 flex-1 text-center min-w-[200px]">
                ‚úÖ Success <span id="success-count" class="bg-emerald-500 px-3 py-1 rounded-full text-sm ml-2">0</span>
            </button>
            <button hx-get="/api/invalid" hx-target="#results" hx-swap="innerHTML"
                    class="tab-btn py-4 px-6 font-bold text-lg border-b-4 border-transparent hover:border-red-400 hover:bg-red-500/20 hover:text-red-200 flex-1 text-center min-w-[200px]">
                ‚ùå Invalid <span id="invalid-count" class="bg-red-500 px-3 py-1 rounded-full text-sm ml-2">0</span>
            </button>
        </div>

        <!-- RESULTS -->
        <div id="results" class="min-h-[400px]">
            <div class="text-center py-24 text-gray-500">
                <div class="text-6xl mb-6">üéØ</div>
                <h2 class="text-3xl font-bold mb-4">Click a tab to see results</h2>
            </div>
        </div>
    </div>

    <script>
        // Status cards template
        function renderStatus(data) {
            return `
                <div class="p-8 rounded-2xl text-center ${data.success > 0 ? 'bg-gradient-to-br from-emerald-500/20 border-emerald-500/50' : 'bg-gray-800 border-4 border-gray-700'} hover:scale-105 transition-all">
                    <div class="text-4xl font-black ${data.success > 0 ? 'text-emerald-400 animate-pulse' : 'text-emerald-300/70'} mb-3">${data.success}</div>
                    <div class="uppercase tracking-wider font-bold text-emerald-400 text-sm">SUCCESS</div>
                </div>
                <div class="p-8 rounded-2xl text-center ${data.invalid > 0 ? 'bg-gradient-to-br from-red-500/20 border-red-500/50' : 'bg-gray-800 border-4 border-gray-700'} hover:scale-105 transition-all">
                    <div class="text-4xl font-black text-red-400 mb-3">${data.invalid}</div>
                    <div class="uppercase tracking-wider font-bold text-red-400 text-sm">INVALID</div>
                </div>
                <div class="p-8 rounded-2xl text-center bg-gradient-to-br from-blue-500/20 to-blue-600/20 border-4 border-blue-500/50 hover:scale-105 transition-all">
                    <div class="text-4xl font-black text-blue-400 mb-3">${data.checked}/${data.total_logins}</div>
                    <div class="text-blue-300 text-sm font-mono">${data.progress_pct}%</div>
                </div>
                <div class="p-8 rounded-2xl text-center bg-gradient-to-br from-purple-500/20 to-purple-600/20 border-4 border-purple-500/50 hover:scale-105 transition-all">
                    <div class="text-3xl font-black text-purple-400 mb-1">${data.success_rate}</div>
                    <div class="text-purple-300 uppercase tracking-wider text-xs font-bold">Success Rate</div>
                </div>
            `;
        }

        // Results template
        function renderResults(data, type) {
            const items = type === 'success' ? data.success : data.invalid;
            const color = type === 'success' ? 'emerald' : 'red';
            let rows = '';
            
            if (items.length === 0) {
                rows = `<tr><td colspan="5" class="p-16 text-center text-${color}-400 text-xl">${type === 'success' ? 'üéâ No successful logins yet' : 'üö´ No invalid logins yet'}</td></tr>`;
            } else {
                items.forEach(item => {
                    rows += `
                        <tr class="hover:bg-${color}-500/10 transition-all border-b border-${color}-500/30">
                            <td class="p-4 font-mono text-${color}-400 font-semibold">${item.user_id}</td>
                            <td class="p-4">${item.name || '-'}</td>
                            <td class="p-4 font-mono text-sm opacity-80">${item.phone || '-'}</td>
                            <td class="p-4 text-xs text-gray-400 truncate max-w-sm">${item.proxy_used}</td>
                            <td class="p-4 text-sm text-gray-300">${new Date(item.timestamp).toLocaleTimeString()}</td>
                        </tr>
                    `;
                });
            }
            
            return `
                <div class="bg-gray-800/50 backdrop-blur-sm rounded-3xl p-8 border-2 border-${color}-500/30 fade-in">
                    <h2 class="text-3xl font-black text-${color}-400 mb-8">Live ${type.toUpperCase()} (${items.length})</h2>
                    <div class="overflow-x-auto rounded-2xl border border-${color}-500/20">
                        <table class="w-full text-sm">
                            <thead class="bg-gradient-to-r from-${color}-500/10 to-${color}-600/10">
                                <tr>
                                    <th class="p-4 text-left font-bold text-${color}-300">Email</th>
                                    <th class="p-4 text-left font-bold text-${color}-300">Name</th>
                                    <th class="p-4 text-left font-bold text-${color}-300">Phone</th>
                                    <th class="p-4 text-left font-bold text-${color}-300">Proxy</th>
                                    <th class="p-4 text-left font-bold text-${color}-300">Time</th>
                                </tr>
                            </thead>
                            <tbody>${rows}</tbody>
                        </table>
                    </div>
                </div>
            `;
        }

        // HTMX response handlers
        document.body.addEventListener('htmx:afterRequest', async (e) => {
            if (e.detail.target.id === 'status-cards' && e.detail.xhr.status === 200) {
                const data = JSON.parse(e.detail.xhr.response);
                e.detail.target.innerHTML = renderStatus(data);
            }
            
            if (e.detail.target.id === 'results' && e.detail.xhr.status === 200) {
                const data = JSON.parse(e.detail.xhr.response);
                e.detail.target.innerHTML = renderResults(data, e.detail.elt.getAttribute('data-type') || 'success');
            }
        });

        // Update counters and stop button
        setInterval(async () => {
            try {
                const res = await fetch('/api/status');
                const data = await res.json();
                document.getElementById('success-count').textContent = data.success_count;
                document.getElementById('invalid-count').textContent = data.invalid_count;
                document.getElementById('stop-btn').classList.toggle('hidden', !data.is_running);
            } catch(e) {}
        }, 3000);

        // Set data-type for tabs
        document.querySelectorAll('[hx-get="/api/success"], [hx-get="/api/invalid"]').forEach(btn => {
            btn.setAttribute('data-type', btn.getAttribute('hx-get').includes('success') ? 'success' : 'invalid');
        });
    </script>
</body>
</html>
